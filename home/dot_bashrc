for file in ~/.bashrc.d/*.sh
do
	if [ -r "$file" ]
	then
		source "$file"
	fi
done
unset file

if [ -r /etc/bash_completion ] && ! shopt -oq posix
then
    source /etc/bash_completion
fi


shopt -s extglob
shopt -s globstar
#shopt -s nullglob

shopt -s autocd
shopt -s cdspell
shopt -s cdable_vars

shopt -s checkjobs
shopt -s histappend
shopt -s checkwinsize

set -o noclobber
set -o vi


where
