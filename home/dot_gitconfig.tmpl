[core]
	editor = nvim
  excludesfile = ~/.gitignore

[user]
	email = {{ .email }}
	name = {{ .name }}

[color]
    diff = auto
    status = auto
    branch = auto

[diff]
  tool = nvimdiff
	submodule = log

[difftool]
	prompt = false

[merge]
  tool = nvimdiff

[mergetool]
	keepBackup = false

[mergetool "nvimdiff"]
  layout = "(LOCAL/BASE/REMOTE),MERGED"

[push]
	default = simple
[fetch]
	prune = true
[pull]
	rebase = false
[rebase]
	missingCommitsCheck = warn
[submodule]
	recurse = true

[svn]
	rmdir = true
[rerere]
	enabled = true
	autoupdate = true

[credential]
        helper = cache --timeout=86400

[filter "lfs"]
        smudge = git-lfs smudge --skip -- %f
        process = git-lfs filter-process --skip
[gitsh]
	defaultCommand = status --short --untracked-files=no
[http]
        postBuffer = 524288000
[https]
        postBuffer = 524288000

[alias]
	alias = !git config --get-regexp ^alias
	sh = !gitsh
	graph = !git-graph --style round
  ui = !gitui
  lazy = !lazygit
	amend = commit --amend --verbose
	unstage = reset
	soft = reset --soft
	hard = reset --hard
	a = add
	aa = add --all
	ai = add --interactive
	ap = add --patch
	au = add --update
	b = branch
	co = checkout
	ci = commit
	ca = commit --all
	d = diff
	ds = diff --stat
	m = merge
	p = diff --cached
	ps = diff --cached --stat
	f = fetch --prune
	k = cherry-pick
	l = log --pretty=oneline --abbrev-commit
	lf = log --pretty=fuller --abbrev-commit
	gg = log --graph --oneline --decorate
  g = graph
	lfzf = log --oneline --color | fzf --ansi --no-sort --reverse --preview 'git show --color=always {+1}'
	n = commit --amend --no-edit
	s = status --short --untracked-files=no
	r = rebase
	ri = rebase -i
	rr = rebase --reset-author
  ra = rebase --exec 'git commit --amend --no-edit --reset-author'
	sw = switch
	# pull merge
	pm = pull
	pr = pull --rebase
	pop = reset HEAD^
	wt = worktree
