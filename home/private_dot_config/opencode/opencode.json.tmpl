{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "instructions": ["~/.config/AGENTS.md"],
  "model": "anthropic/claude-sonnet-4-5",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
       "headers": {
        "CONTEXT7_API_KEY": {{ env "CONTEXT7_API_KEY" | quote }}
      },
    },
    "mise": {
      "type": "local",
      "command": [
        "mise",
        "mcp"
      ],
    }
  },
}
