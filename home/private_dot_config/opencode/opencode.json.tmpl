{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
        "headers": {
         "CONTEXT7_API_KEY": {{ env "CONTEXT7_API_KEY" | quote }}
       },
    },
    "mise": {
      "type": "local",
      "command": [
        "mise",
        "mcp"
      ],
    }
  },

  "command": {
    "scicalc": {
      "template": "Calculate: $ARGUMENTS",
      "description": "Perform scientific calculations with units using Numbat",
      "agent": "scientist"
    }
  }
}
