{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": {
    "tmux":        "latest",
    "bat":         "latest",
    "fd":          "latest",
    "fzf":         "latest",
    "ripgrep":     "latest",
    "git":         "latest",
    "atuin":       "latest",
    "gitui":       "latest",
    "tree-sitter": "latest",
    "neovim":      "latest",
    "gh":          "latest",
    "aider-chat":  "latest",
    "vim":         "latest",
    "uv":          "latest",
    "xsel":        "latest",
    "rsync":       "latest",
    "sshfs-fuse":  "latest",
    "rcs":         "latest",
    "tree":        "latest",
    "readline":    "latest",
    "nodejs":      "latest",
    "aichat":      "latest",
    "jq":          "latest",
    "yq":          "latest",
    "tldr":        "latest",
    "direnv":      "latest",
    "httpie":      "latest",
    "git-graph": {
      "version":   "latest",
      "platforms": ["aarch64-linux", "x86_64-linux"]
    },
    "gh-dash":                   "latest",
    "uutils-coreutils-noprefix": "latest",
    "uutils-findutils":          "latest",
    "diffutils":                 "latest",
    "eza":                       "latest",
    "duf":                       "latest",
    "bottom":                    "latest",
    "dust":                      "latest",
    "procs":                     "latest",
    "gnugrep":                   "latest",
    "gnused":                    "latest",
    "gawk":                      "latest",
    "procps":                    "latest",
    "dateutils":                 "latest",
    "tzdata":                    "latest",
    "nerd-fonts.inconsolata":    "latest",
    "zellij":                    "latest",
    "lazydocker":                "latest",
    "zoxide":                    "latest",
    "lnav":                      "latest",
    "yazi":                      "latest",
    "file":                      "latest",
    "p7zip":                     "latest",
    "imagemagick":               "latest",
    "xclip":                     "latest",
    "wl-clipboard":              "latest",
    "exiftool":                  "latest",
    "lazysql":                   "latest",
    "zk":                        "latest",
    "htop":                      "latest",
    "taskwarrior-tui":           "latest",
    "taskwarrior":               "latest",
    "lazygit":                   "latest",
    "timewarrior":               "latest",
    "glab":                      "latest",
    "gnupg":                     "latest",
    "gpg-tui":                   "latest",
    "dos2unix":                  "latest",
    "dash":                      "latest",
    "taskopen": {
      "version":            "latest",
      "excluded_platforms": ["aarch64-darwin"]
    }
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "clean": [
        "devbox global run nix-clean",
        "command -v brew >/dev/null && devbox global run brew-clean"
      ],
      "nix-clean": [
        "echo '[dotfiles][devbox] Starting Nix cleanup'",
        "echo '[dotfiles][devbox] Deleting old generations...'",
        "nix-collect-garbage -d",
        "nix profile wipe-history --extra-experimental-features nix-command",
        "echo '[dotfiles][devbox] Verifying and cleaning the Nix store...'",
        "nix store gc",
        "echo '[dotfiles][devbox] Deleting Nix stale logs...'",
        "sudo rm -rf /nix/var/log/nix/drvs",
        "echo '[dotfiles][devbox] Cleanup complete.'"
      ],
      "brew-clean": [
        "echo '[dotfiles][brew] Starting Homebrew cleanup...'",
        "brew cleanup --scrub --prune=all",
        "rm -rf \"$(brew --cache)\"",
        "brew autoremove"
      ],
      "nvim-update": [
        "echo '[dotfiles][nvim] Updating Neovim plugins...'",
        "nvim --headless \"+Lazy! update\" +qa"
      ],
      "nvim-sync": [
        "echo '[dotfiles][nvim] Syncing Neovim plugins...'",
        "nvim --headless \"+Lazy! sync\" +qa"
      ],
      "nvim-reinstall": [
        "echo '[dotfiles][nvim] Reinstalling Neovim plugins...'",
        "rm -rf ~/.config/nvimiw/ ~/.local/share/nvim/",
        "rm ~/.config/nvim/lazy-lock.json",
        "nvim --headless \"+Lazy! install\" +qa"
      ],
      "devbox-update": [
        "echo '[dotfiles][devbox] Updating devbox...'",
        "devbox version update"
      ],
      "yazi-update": [
        "echo '[dotfiles][yazi] Updating yazi packages...'",
        "ya pack --upgrade"
      ],
      "chezmoi-update": [
        "echo '[dotfiles][chezmoi] Updating chezmoi...'",
        "chezmoi upgrade"
      ],
      "update": [
        "devbox global run chezmoi-update",
        "devbox global run devbox-update",
        "echo '[dotfiles][devbox] Updating devbox packages...'",
        "command -v brew > /dev/null && brew update && brew upgrade",
        "devbox global update",
        "devbox global run yazi-update",
        "devbox global run nvim-update"
      ],
      "list-nerd-fonts": "fc-list | grep Nerd"
    }
  }
}
