{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
  "packages": {
    "tmux":        "latest",
    "bat":         "latest",
    "fd":          "latest",
    "fzf":         "latest",
    "ripgrep":     "latest",
    "git":         "latest",
    "atuin":       "latest",
    "gitui":       "latest",
    "tree-sitter": "latest",
    "neovim":      "latest",
    "gh":          "latest",
    "aider-chat":  "latest",
    "ranger":      "latest",
    "vim":         "latest",
    "uv":          "latest",
    "xsel":        "latest",
    "rsync":       "latest",
    "sshfs-fuse":  "latest",
    "rcs":         "latest",
    "tree":        "latest",
    "readline":    "latest",
    "nodejs":      "latest",
    "aichat":      "latest",
    "jq":          "latest",
    "yq":          "latest",
    "tldr":        "latest",
    "direnv":      "latest",
    "httpie":      "latest",
    "git-graph": {
      "version":   "latest",
      "platforms": ["aarch64-linux", "x86_64-linux"]
    },
    "gh-dash":                   "latest",
    "uutils-coreutils-noprefix": "latest",
    "uutils-findutils":          "latest",
    "diffutils":                 "latest",
    "eza":                       "latest",
    "duf":                       "latest",
    "bottom":                    "latest",
    "dust":                      "latest",
    "procs":                     "latest",
    "gnugrep":                   "latest",
    "gnused":                    "latest",
    "gawk":                      "latest",
    "procps":                    "latest",
    "dateutils":                 "latest",
    "tzdata":                    "latest",
    "nerd-fonts.inconsolata":    "latest",
    "zellij":                    "latest",
    "lazydocker":                "latest",
    "zoxide":                    "latest",
    "lnav":                      "latest",
    "yazi":                      "latest",
    "file":                      "latest"
  },
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "clean": [
        "devbox run -- nix store gc --extra-experimental-features nix-command"
      ],
      "clean-all": [
        "devbox global run clean",
        "devbox global run nix-clean",
        "devbox global run brew-clean"
      ],
      "nix-clean": [
        "echo '[dotfiles][devbox] Starting Nix cleanup'",
        "echo '[dotfiles][devbox] Deleting old generations...'",
        "nix-collect-garbage -d",
        "nix profile wipe-history --extra-experimental-features nix-command",
        "echo '[dotfiles][devbox] Verifying and cleaning the store...'",
        "nix-store --gc",
        "echo '[dotfiles][devbox] Deleting stale logs...'",
        "rm -rf /nix/var/log/nix/drvs",
        "echo '[dotfiles][devbox] Nix cleanup complete.'"
      ],
      "brew-clean": [
        "brew cleanup --scrub --prune=all",
        "rm -rf \"$(brew --cache)\"",
        "brew autoremove"
      ],
      "list-nerd-fonts": "fc-list | grep Nerd"
    }
  }
}
