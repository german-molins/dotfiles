#!/bin/sh

###
# Configures the input device 'Kensington Slimblade Trackball' for the
# X-Server using a preferred set of hardcoded values (right-handed).
###

product='Kensington Slimblade Trackball' 
_DRIVER=libinput

setprop ()
{
	option="$1"
	shift
	value="$@"

	xinput set-prop "$product" "$_DRIVER $option" $value
}

xinput set-button-map "$product" 1 0 2 4 5 0 0 3

setprop 'Drag Lock Buttons' 2 1
setprop 'Rotation Angle' 0
setprop 'Middle Emulation Enabled' 0
setprop 'Natural Scrolling Enabled' 0
setprop 'Button Scrolling Button Lock Enabled' 0
setprop 'Button Scrolling Button' 2
