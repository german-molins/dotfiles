{
  "$schema": "https://opencode.ai/config.json",
  "theme": "gruvbox",
  "instructions": [
    "~/.config/AGENTS.md"
  ],
  "model": "anthropic/claude-opus-4-6",
  "permission": {
    "bash": {
      "*": "ask",
      "git log*": "allow",
      "git diff*": "allow",
      "git show*": "allow",
      "jj log*": "allow",
      "jj diff*": "allow",
      "jj show*": "allow",
    },
    "skill": {
      "*": "allow"
    }
  },
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}",
      }
    }
  }
}
